@model renter.Models.Property
@{
    var x = Model.Image;
    string[] aList = x.Split("$");
    var crowl = "crowl" + Model.PropertyId;
}
<div class="">
    <form method="post">
        <div class="container backgroundWhite pt-4">
            <div class="card" style="border:1px solid #000000; ">
                <div class="pt-1 pr-1 text-right">
                    <a asp-action="MyBooking" class="btn btn-outline-dark btn-sm">
                        <i class="fas fa-times fa-lg"></i>
                    </a>
                </div>
                <div class="card-body">
                    <div class="container rounded p-2">
                        <div class="row">
                            <div class="col-12 col-lg-4 p-1 text-center">
                                @*<img src="@WC.ImagePath@Model.Product.Image" width="100%" class="rounded" />*@
                                <div id="@crowl" class="carousel slide " data-ride="carousel">
                                    <ol class="carousel-indicators">
                                        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                                        @for (int i = 1; i < aList.Length - 1; i++)
                                        {
                                            <li data-target="#carouselExampleIndicators" data-slide-to="@i"></li>
                                        }
                                    </ol>

                                    <div class="carousel-inner">
                                        <div class="carousel-item active">
                                            <img class="d-block w-100" style="height:200px;width:300px"
                                                 src="\Images\@aList[0]" alt="First slide">
                                        </div>
                                        @for (int i = 1; i < aList.Length - 1; i++)
                                        {
                                            <div class="carousel-item">
                                                <img class="d-block w-100" style="height:200px;width:300px"
                                                     src="\Images\@aList[i]" alt="Second slide">
                                            </div>
                                        }
                                    </div>
                                    <a class="carousel-control-prev" href="#@crowl" role="button" data-slide="prev">
                                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                        <span class="sr-only">Previous</span>
                                    </a>
                                    <a class="carousel-control-next" href="#@crowl" role="button" data-slide="next">
                                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                        <span class="sr-only">Next</span>
                                    </a>
                                </div>
                            </div>
                            <div class="col-12 col-lg-8">
                                <div class="row pl-3">
                                    <div class="col-lg-6 col-md-12 pt-2">
                                        <span class="badge  border" style="background-color:lavenderblush;
                                        padding: 15px 48px 15px 48px">BHK </span> :
                                        <span class="badge p-3 border" style="background-color:azure">@Model.BHK BHK</span>
                                    </div>
                                    <div class="col-lg-6 col-md-12 pt-2">
                                        <span class="badge border" style="background-color:lavenderblush;
                                        padding: 15px 25px 15px 25px">Owner Name</span> :
                                        <span class="badge p-3 border" style="background-color:azure">@Model.OwnerName</span>
                                    </div>
                                    <div class="col-lg-6 col-md-12 pt-2">
                                        <span class="badge  border" style="background-color:lavenderblush;
                                        padding: 15px 48px 15px 48px">Price </span> :
                                        <span class="badge p-3 border" style="background-color:azure">
                                            <i class="fas fa-rupee-sign"></i> &nbsp; @Model.Price / Month
                                        </span>
                                    </div>
                                    <div class="col-lg-6 col-md-12 pt-2">
                                        <span class="badge  border" style="background-color:lavenderblush;
                                        padding: 15px 23px 15px 23px">Property Type </span> :
                                        <span class="badge p-3 border" style="background-color:azure">@Model.PropertyType</span>
                                    </div>

                                    <div class="col-lg-6 col-md-12 pt-2">
                                        <span class="badge  border" style="background-color:lavenderblush;
                                        padding: 15px 33px 15px 33px">Furnishing </span> :
                                        <span class="badge p-3 border" style="background-color:azure">@Model.Furnishing</span>
                                    </div>
                                    <div class="col-lg-6 col-md-12 pt-2">
                                        <span class="badge p-3 border" style="background-color:lavenderblush">Bathroom Count </span> :
                                        <span class="badge p-3 border" style="background-color:azure">@Model.BathroomCount</span>
                                    </div>
                                </div>
                                <div class="row pt-4 pl-3">
                                    <div class="col-lg-2 col-md-4">
                                        <p class="badge  border" style="background-color:lavenderblush;
                                        padding: 16px 10px 16px 10px">Short Description </span> :
                                    </div>
                                    <div class="col-lg-8 ml-4 col-md-6">
                                        <p>@Model.ShortDescription</p>
                                    </div>
                                </div>
                                <div class="row pt-2 pl-3">
                                    <div class="col-lg-2 col-md-4">
                                        <p class="badge  border" style="background-color:lavenderblush;
                                        padding: 16px 25px 16px 25px">Description </span> :
                                    </div>
                                    <div class="col-lg-8 ml-4 col-md-6">
                                        <p>@Model.Description</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>