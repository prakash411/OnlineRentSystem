@model IEnumerable<renter.Models.Booking>

<partial name="_toster" />

<style>
    th, td {
        text-align: center;
    }
</style>
<div class="container mt-3">
    <div class="border p-3 bg-white">
        <div class="d-flex justify-content-between mb-3">
            <div class="p-2">
                <h2 class="custom-text">Booking List </h2>
            </div>

        </div>
        @if (Model.Count() > 0)
        {
            <table id="tblData" class="table table-striped table-bordered pt-2" style="width:100%">
                <thead>
                    <tr class="custom-tbl" style="background-image: linear-gradient(to left top, #f4ff00,
                        #fede00, #ffbd00, #ff9b00, #fc7900, #fc7900, #fc7900, #fc7900, #ff9b00, #ffbd00,
                        #fede00, #f4ff00) !important;">
                        <th>Booking Id</th>
                        <th>Booking Status</th>
                        <th>Property Info</th>
                        <th>Cancel Booking</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var obj in Model)
                    {
                        <tr>
                            <td>@obj.BookingId</td>
                            <td>@obj.BookingStatus</td>
                            <td>
                                <a asp-action="Details2" asp-route-id="@obj.PropertyId" class="btn btn-outline-info">
                                    <i class="fas fa-file-alt"></i>
                                </a>
                            </td>
                            <td>
                                <a asp-action="Cancel" asp-route-id="@obj.BookingId" class="btn btn-outline-danger"
                                   OnClick="return confirm('Are you sure you want to cancel this Booking?');">
                                    <i class="fas fa-window-close"></i> &nbsp; Cancel
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p> No Booking exists.</p>
        }
    </div>
</div>


@section Scripts {
    <script>
        $(document).ready(function () {
            $('#tblData').DataTable();
        });
    </script>
}