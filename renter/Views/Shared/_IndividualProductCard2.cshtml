@model renter.Models.Property
@{
    var x = Model.Image;
    string[] aList = x.Split("$");
    var crowl = "crowl" + Model.PropertyId;
}
<div class="col-lg-4 col-md-6 pb-4 filter ">
    <!-- Card-->
    <div class="card bg-white rounded shadow-sm" style="border:1px solid #222">
        <div class="card-body px-3 pt-3 pb-1 row">
            <div class="col-5"><h5 class=" float-left">@Model.BHK BHK</h5></div>
            <div class="col-7">
                <label class="float-right custom-text">
                    <i class="fas fa-rupee-sign" ></i>
                    <span class=" h5">@Model.Price / Month</span>
                </label>
            </div>
        </div>

        @* <img class="card-img-top img-fluid d-block mx-auto mb-3" src="@Model.Image" alt="Card image cap">*@
        <div id="@crowl" class="carousel slide " data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                @for (int i = 1; i < aList.Length - 1; i++)
                {
                    <li data-target="#carouselExampleIndicators" data-slide-to="@i"></li>
                }
            </ol>

            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block w-100" style="height:200px;width:300px"
                         src="\Images\@aList[0]" alt="First slide">
                </div>
                @for (int i = 1; i < aList.Length - 1; i++)
                {
                    <div class="carousel-item">
                        <img class="d-block w-100" style="height:200px;width:300px"
                             src="\Images\@aList[i]" alt="Second slide">
                    </div>
                }
            </div>
            <a class="carousel-control-prev" href="#@crowl" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#@crowl" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
        
        <div class="card-body p-1 px-3 row">
            <div class="col-6">
                <span class="badge p-2 border w-100" style="background-color:lavenderblush">@Model.PropertyType</span>
            </div>
            <div class="col-6 border-0">
                <span class="badge p-2 border w-100" style="background-color:aliceblue">@Model.Furnishing</span>
            </div>
            <div class="col-6 p-1">
                <a asp-action="Upsert" asp-route-id="@Model.PropertyId" 
                   class="btn btn-outline-warning form-control btn-sm p-2" style="height:40px">
                    <i class="fas fa-edit">&nbsp; Edit</i></a>
            </div>
            <div class="col-6 p-1">
                <a asp-action="Delete" asp-route-id="@Model.PropertyId" OnClick="return confirm('Are you sure you want to delete this Property?');"
                   class="btn btn-outline-danger form-control btn-sm p-2" style="height:40px">
                    <i class="fas fa-trash">&nbsp; Delete</i></a>
            </div>
        </div>
    </div>
</div>
